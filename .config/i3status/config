#        format = "%avail"
#}

#disk "/home" {
#	format = "%avail"
#}

# Number of processes waiting for cpu in the last 1min
#load {
#        format = "%1min"
#}

#memory {
#        format = "%available"
#        threshold_degraded = "1G"
#        format_degraded = "MEMORY < %available"
#}

tztime paris {
        format = "%Y-%m-%d %H:%M:%S"
        timezone = "Europe/Paris"
}
